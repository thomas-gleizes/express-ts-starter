{
  "ts-node": {
    "files": true
  },
  // add this  "ts-node": {  "files": true }, // add this
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src/",
    "paths": {
      "controllers/*": ["controllers/*"],
      "models/*": ["models/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "routes/*": ["routes/*"],
      "middlewares/*": ["middlewares/*"],
    }
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
